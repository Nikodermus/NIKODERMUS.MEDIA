@require '../styles/*'

// General Elements Styling
html
  background: red
body
  absolute: top left
  width: $full_w
  max-width: $full_w
  height: 100%
  background: white
  font-family: 'asap', sans-serif
button
  background: transparent
  border: 0
  border-radius: 0
  &:hover
    cursor: pointer

h1
h2
h3
h4
h5
h6
  font-family: 'bebas'

// Helper Classes
.square
  position: relative
  &:after
    content: ''
    padding-bottom: 100%
    display: block
  .square__content
    position: absolute
    width: 100%
    height: 100%

.title
  font-family: 'bebas'
  letter-spacing: .03em
  *
    font-family: @font-family
    letter-spacing: @letter-spacing
.bold
  font-weight: bold
  *
    font-weight: @font-weight
.uppercase
  text-transform: uppercase
.capitalize
  text-transform: capitalize
.flex
  display: flex
  &__horizontal-align
    justify-content: center
  &__horizontal-left
    justify-content: flex-start
  &__horizontal-right
    justify-content: flex-end
  &__vertical-align
    align-items: center
  &__vertical-top
    align-items: flex-start
  &__vertical-bottom
    align-items: flex-end
.btn
  &--default
    &:hover
      opacity: .8
      transform: scale(1.3)


