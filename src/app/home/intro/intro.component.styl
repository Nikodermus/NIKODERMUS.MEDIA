@require '../styles/_mixins'

.intro
  &__half
    height: 100vh
    position: relative
    cursor: default
    retina('/assets/img/transparent','png')
    &:hover
      .intro__main
        transform: scale(1.3)
        opacity: 0
      .intro__content
        opacity: 1
    &--left
      &:hover
        retina('/assets/img/home/bg-intro-left','png')
    &--right
      &:hover
        retina('/assets/img/home/bg-intro-right','png')

  &__main
    opacity: 0
    transform: scale(1)
    verticalAlign()
    h6
      width: 100%
      verticalAlign()
  &__content
    opacity: 1
    height: 100vh


