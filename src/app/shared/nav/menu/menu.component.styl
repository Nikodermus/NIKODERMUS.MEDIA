@require '../styles/_variables'
@require '../styles/_mixins'

@keyframes opening_circle
  0%
    clip-path: circle(0% at 50% 50%)
  100%
    clip-path: circle(100% at 50% 50%)

@keyframes closing_circle
  0%
    clip-path: circle(100% at 50% 50%)
  100%
    clip-path: circle(0% at 50% 50%)

.menu
  height: 100vh
  width: 100vw
  background: red
  fixed: top left
  z-index: -1
  animation: closing_circle 0.7s ease;
  animation-fill-mode: forwards;
  &--open
    animation: opening_circle 0.7s ease
    animation-fill-mode: forwards
  &--no-animation
    animation: none
  &__close-btn
    padding: $sm
    absolute: top right


