@require '../styles/_variables'
@require '../styles/_mixins'


.navigation
  fixed: top left
  z-index: 100
  height: 100vh
  width: $full_w
  > *
    position: absolute
  &__open
    top: $sm
    right: 0
    width: 30px
    z-index: 10
    i
      line-height: 0
      display: inline-block
      height: 5px
    &--hidden
      opacity: 0
      z-index: -1
  &__contact
    bottom: $sm
    right: $sm
    transform-origin: bottom left
    transform: rotate(-90deg) translateY(calc(200% + 1.5rem))
  &__social-networks
    bottom: $sm
    left: $sm
    a
      margin-right: $sm
  &__logo
    top: $sm
    left: $sm
  &__links
    width: 45px
    top: 0
    right: - $xl
    height: 100vh
    padding-top: "calc(30px + %s)" % $md
    transition-duration: 0.6s
    &--open
      right: -15px
    &--hidden
      z-index: -1
    &__container
      height: "calc((100vh - %s)/ 5)" % unquote(@padding-top)
      text-align: center
      overflow: hidden
      button
        padding-top: rem(3)
        transform: rotate(-90deg)
        width: 100%
        height: 100%


