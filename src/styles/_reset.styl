@require '../../node_modules/nib/lib/nib/'
@require '../styles/_variables'

global-reset()

@-ms-viewport
    width: device-width

html
  box-sizing: border-box
  font-size: 16px
*
*:after
*:before
  margin: 0
  padding: 0
  box-sizing: inherit
  transition: all $transition 0.3s
  &:hover
    transition: all $transition 0.3s
  &:focus
    outline: 0 !important
a
a:visited
a:focus
    text-decoration: none
    color: inherit
    &:hover
        text-decoration: none
        color: inherit
body
  font-family: sans-serif
  font-size: 1em
  width: 100%
  max-width: 100vw
img
  width: 100%
  max-width: 100%
  object-fit: contain
