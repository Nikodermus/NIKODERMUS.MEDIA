// @require '../../node_modules/rupture/rupture/*'
@require '_mixins'


vendor-prefixes = webkit moz o ms official
$i = !important
$size = 16

/* Media Query Rupture Variables*/
rupture.scale = 0 em(576) em(768) em(992) em(1200)
rupture.scale-names = 'xs' 'sm' 'md' 'lg' 'xl'

/* Overwrite original colors */
red = #B42F2F
black = #2F2F2F
gray = #CCCCCC
white = #FFFFFF

// Boostrap V4 Breakpoints
$screen-xs = 320
$screen-sm = 576
$screen-md = 768
$screen-lg = 992
$screen-xl = 1200

